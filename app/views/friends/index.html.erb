<% content_for :title, "Friends" %>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>User ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
        <tr>          
          <td><%= friend.first_name %></td>
          <td><%= friend.last_name %></td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.user_id %></td>
          <td><%= link_to 'Show', friend, method: :show %></td>    
          <td><%= link_to 'Edit', friend, method: :edit %></td>    
          <td><%= link_to 'Destroy', friend, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></td>    
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
