<% content_for :title, "Friends" %>

<% if user_signed_in? %>

  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Phone</th>
        <th>Email</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
          <tr>          
            <td><%= link_to friend.first_name + ' ' + friend.last_name, friend, method: :show %></td>
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= link_to 'Delete', friend, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class:'btn btn-sm btn-outline-danger' %></td>    
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>

<% end %>
